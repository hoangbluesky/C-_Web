@model projectdbfirst.Models.NVUserViewModel

@{
    ViewBag.Title = "Edit";
}

<h2>Sửa thông tin nhân viên</h2>


@using (Html.BeginForm("Edit", "NVs"))
{
    @Html.AntiForgeryToken()

<div class="form-horizontal">
    <h4>NV</h4>
    <hr />
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    @Html.HiddenFor(model => model.NVInfo.MaNV)
    @Html.HiddenFor(model => model.UserInfo.UserId)
    @Html.HiddenFor(model => model.UserInfo.Username)
    @Html.HiddenFor(model => model.UserInfo.Password)
    @Html.HiddenFor(model => model.UserInfo.Role)
    @Html.HiddenFor(model => model.NVInfo.NVUserId)

    <div class="form-group">
        @Html.LabelFor(model => model.NVInfo.TenNV, htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.EditorFor(model => model.NVInfo.TenNV, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.NVInfo.TenNV, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.NVInfo.GioiTinh, htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.EditorFor(model => model.NVInfo.GioiTinh, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.NVInfo.GioiTinh, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.NVInfo.DiaChi, htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.EditorFor(model => model.NVInfo.DiaChi, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.NVInfo.DiaChi, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.NVInfo.DienThoai, htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.EditorFor(model => model.NVInfo.DienThoai, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.NVInfo.DienThoai, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.NVInfo.NgaySinh, htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.EditorFor(model => model.NVInfo.NgaySinh, new { htmlAttributes = new { @class = "form-control", @id = "NgaySinh" } })
            @Html.ValidationMessageFor(model => model.NVInfo.NgaySinh, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        <div class="col-md-offset-2 col-md-10 mb-2 mt-2">
            <input type="submit" value="Save" class="btn btn-primary" />
        </div>
    </div>
</div>
}

<div>
    @Html.ActionLink("Back to List", "Index", null, new { @class = "btn btn-primary" })
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/jqueryval")
    <!--Thêm thư viện jQuery UI-->
    <link rel="stylesheet" href="//code.jquery.com/ui/1.12.1/themes/base/jquery-ui.css">
    <script src="//code.jquery.com/ui/1.12.1/jquery-ui.js"></script>

    <script>
    $(function () {
        $("#NgaySinh").datepicker({
            dateFormat: "mm/dd/yy" // Định dạng hiển thị ngày tháng
        });
    });
    </script>
}
