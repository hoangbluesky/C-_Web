@model IPagedList<projectdbfirst.Models.CTHDBan>
@using PagedList;
@using PagedList.Mvc;

@*@model IEnumerable<projectdbfirst.Models.CTHDBan>*@

@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<h2>Index</h2>
<p>
    @Html.ActionLink("Hóa đơn", "Index", "HDBans", null, new { @class = "btn btn-primary" }) |
    @Html.ActionLink("Danh sách tổng", "Index", new { Id = 0 }, new { @class = "btn btn-primary" })
</p>
<table class="table">
    <tr>
        <th>
            Số lượng
        </th>
        <th>
            Đơn giá
        </th>
        <th>
            Thành tiền
        </th>
        <th>
            Tên hàng
        </th>
        <th>
            Mã hóa đơn bán
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.SoLuong)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DonGia)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ThanhTien)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Hang.TenH)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.HDBan.MaHDBan)
            </td>
            <td>
                @Html.ActionLink("Details", "Details", new { key1 = item.MaHDBan, key2 = item.MaH }, new { @class = "btn btn-success" })
            </td>
        </tr>
    }

</table>

<div class="pagination-container">
    @Html.PagedListPager(Model, page => Url.Action("Index", new { page }))
</div>